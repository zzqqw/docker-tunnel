#!/usr/bin/env sh

echo "Set SSH connection account: ${SSH_USER}, connection password: ${SSH_PASSWORD}"

useradd -m -d /home/${SSH_USER} -s /bin/bash ${SSH_USER}

echo "${SSH_USER}:${SSH_PASSWORD}" | chpasswd

echo "AllowUsers ${SSH_USER}" >> /etc/ssh/sshd_config

echo "start ssh ...."

/usr/sbin/sshd -D -e